<CardLayout Id="CardModel.Id" IsDropdownVisible="CardModel.IsDropdownVisible">



    <CascadingValue Value="CardModel">
        <CardHeader />
        @foreach (var item in CardModel.Items)
        {
            <Item ItemModel="item" />
        }
    </CascadingValue>


    @*<div id="dropzone" @ref="dropzone" style="width: 200px; height: 150px; background-color: silver;">dropzone</div>*@

    <div @ref="_linkGrabberElement">
        Drop bookmarks here
    </div>

    <h1>Upload files!</h1>

    <div @ref="dropZoneElement" class="drop-zone">
        <p>Drop a file or paste an image from the clipboard or select a file using the input</p>
        <div @ref="inputFileContainer">
            <InputFile OnChange="@OnChange" class="hidden" />
        </div>
    </div>

    @* Display the uploaded image *@
    <img src="@src" />


</CardLayout>